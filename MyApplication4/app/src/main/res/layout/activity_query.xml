<?xml version="1.0" encoding="UTF-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.myapplication.contact">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


<LinearLayout
    android:layout_marginRight="25dp"
    android:layout_marginTop="45dp" android:layout_marginLeft="25dp"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingTop="2dp" android:text="Submit Your Query Here...." android:id="@+id/header" android:textColor="#4caf50" android:textSize="20dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="college id"  android:textColor="#ab47bc" android:textSize="18dp" android:layout_alignParentRight="true" android:layout_below="@+id/reg_name" android:textStyle="bold"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etCollegeId" android:layout_alignParentRight="true" android:layout_below="@+id/tx2"/>
    />
    <TextView android:layout_marginTop="35dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Name" android:id="@+id/tx1" android:textColor="#ab47bc" android:textSize="18dp" android:layout_alignParentRight="true" android:layout_below="@+id/header" android:textStyle="bold"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/header"
        android:layout_marginTop="5dp" />
    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Mobile no"  android:textColor="#ab47bc" android:textSize="18dp" android:layout_alignParentRight="true" android:layout_below="@+id/reg_name" android:textStyle="bold"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etMobile" android:layout_alignParentRight="true" android:layout_below="@+id/tx2"/>
    />



    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Type your Query" android:id="@+id/txt3" android:textColor="#ab47bc" android:textSize="18dp" android:layout_alignParentRight="true" android:layout_below="@+id/phone" android:textStyle="bold"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etQuery" android:layout_alignParentRight="true" android:layout_below="@+id/txt3"/>
    />

    <Button
        android:id="@+id/bsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etQueryy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="SUBMIT" />

</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>