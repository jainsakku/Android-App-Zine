<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.myapplication.contact">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>




    <include layout="@layout/content_contact" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:elevation="7dp"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:layout_gravity="bottom">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="7dp"
                    app:cardBackgroundColor="@color/Whi"
                    android:padding="30dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Meenal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Meenal"
                            android:textSize="35dp"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Meenal"
                            android:onClick="Meenal"
                            android:src="@drawable/whatsapp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="30dp"
                    app:cardBackgroundColor="@color/Whi"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Tejeswar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tejeswar"
                            android:textSize="35dp"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Tejeswar"
                            android:onClick="Tejeswar"
                            android:src="@drawable/whatsapp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="7dp"
                    android:padding="30dp"
                    app:cardBackgroundColor="@color/Whi"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Kusum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kusum"
                            android:textSize="35dp"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Kusum"
                            android:onClick="Kusum"
                            android:src="@drawable/whatsapp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="10dp"
                    android:padding="30dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:cardBackgroundColor="@color/Whi"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Kriti"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Kriti"
                            android:textSize="35dp"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Kriti"
                            android:onClick="Kriti"
                            android:src="@drawable/whatsapp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="7dp"
                    android:padding="30dp"
                    app:cardBackgroundColor="@color/Whi"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Anshul"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Anshul"
                            android:textSize="35dp"
                            android:textColor="@color/colorAccent"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Anshul"
                            android:onClick="Anshul"
                            android:src="@drawable/whatsapp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
